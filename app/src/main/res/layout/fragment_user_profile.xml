<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowers"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/followers"
        android:layout_margin="5dp"
        android:textSize="24sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvFollowers"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvFollowers"
        app:layout_constraintBottom_toTopOf="@id/tvFollowing"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFollowing"
        app:layout_constraintTop_toBottomOf="@id/rvFollowers"
        android:text="@string/following"
        app:layout_constraintBottom_toTopOf="@+id/rvFollowing"
        android:layout_margin="5dp"
        android:textSize="24sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvFollowing"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvFollowing"
        app:layout_constraintBottom_toTopOf="@id/btnClose"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/btnClose"
        android:layout_height="wrap_content"
        android:background="@color/twitter_blue"
        android:text="@string/close"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>